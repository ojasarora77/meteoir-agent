# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/agentic_stablecoin
MONGODB_URI=mongodb://localhost:27017/agentic_stablecoin
REDIS_URL=redis://localhost:6379

# API Keys
OPENWEATHER_API_KEY=your_openweather_api_key_here
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=REMOVED

# IPFS Configuration
IPFS_NODE_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_secret

# Arweave Configuration
ARWEAVE_WALLET_PATH=path/to/arweave/wallet.json

# Server Configuration
PORT=3001
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# AI Configuration
ML_MODEL_PATH=models/
TENSORFLOW_CPU_BACKEND=true

# External Service URLs
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5
PRICE_ORACLE_URL=https://api.coingecko.com/api/v3

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
PAYMENT_QUEUE_NAME=payment-processing
MAX_JOB_ATTEMPTS=3
JOB_RETRY_DELAY=5000