# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/agentic_stablecoin
MONGODB_URI=mongodb://localhost:27017/agentic_stablecoin
REDIS_URL=redis://localhost:6379

# API Keys (you'll need to get these)
OPENWEATHER_API_KEY=REMOVED
WEATHERAPI_KEY=REMOVED
AWS_ACCESS_KEY_ID=REMOVED
AWS_SECRET_ACCESS_KEY=REMOVED
AWS_REGION=REMOVED
AWS_S3_BUCKET=REMOVED

# IPFS Configuration (Pinata)
PINATA_API_KEY=REMOVED
PINATA_SECRET_API_KEY=REMOVED
PINATA_JWT_TOKEN=REMOVED
PINATA_GATEWAY_URL=REMOVED

# Arweave Configuration
ARWEAVE_WALLET_PATH=path/to/arweave/wallet.json

# Server Configuration
PORT=3001
NODE_ENV=development
USE_MOCK_DATA=true
JWT_SECRET=agentic-stablecoin-super-secret-jwt-key-2024
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# AI Configuration
ML_MODEL_PATH=models/
TENSORFLOW_CPU_BACKEND=true

# External Service URLs
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5
PRICE_ORACLE_URL=https://api.coingecko.com/api/v3

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
MONITOR_CHECK_INTERVAL=60000
MONITOR_TIMEOUT_THRESHOLD=5000
MONITOR_UPTIME_THRESHOLD=95
MONITOR_RESPONSE_TIME_THRESHOLD=2000
MONITOR_ERROR_RATE_THRESHOLD=10
MONITOR_ALERT_COOLDOWN=300000

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
PAYMENT_QUEUE_NAME=payment-processing
MAX_JOB_ATTEMPTS=3
JOB_RETRY_DELAY=5000
SCHEDULER_CONCURRENCY=5
SCHEDULER_STALE_AGE=30000
SCHEDULER_MAX_JOBS=1000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Request timeout
REQUEST_TIMEOUT=30000